<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="6dp"
        android:textSize="18dp"
        android:gravity="left|center_vertical"
        android:layout_weight="2.75"
        android:id="@+id/rank"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        android:layout_weight="4.25"
        android:id="@+id/team_number"/>
	<View 
	    android:layout_width="1px"
	    android:layout_height="48dp"
	    android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2.833"
        android:id="@+id/high_goal_total"/>
	<View 
	    android:layout_width="1px"
	    android:layout_height="48dp"
	    android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2.833"
        android:id="@+id/low_goal_total"/>
	<View 
	    android:layout_width="1px"
	    android:layout_height="48dp"
	    android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2.833"
        android:id="@+id/truss_total"/>
	<View 
	    android:layout_width="1px"
	    android:layout_height="48dp"
	    android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2.833"
        android:id="@+id/catch_total"/>
	<View 
	    android:layout_width="1px"
	    android:layout_height="48dp"
	    android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2.833"
        android:id="@+id/foul_total"/>
	<View 
	    android:layout_width="1px"
	    android:layout_height="48dp"
	    android:background="@android:color/darker_gray"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="2.833"
        android:id="@+id/tech_foul_total"/>
</LinearLayout>