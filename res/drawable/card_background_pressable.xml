<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="0">
    <item android:state_pressed="false">
		<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
		    <item>
				<shape
				    android:shape="rectangle">
				    <solid android:color="@color/shadow" />
				    <corners
				        android:bottomRightRadius="2dp"
				        android:bottomLeftRadius="2dp"
				        android:topRightRadius="2dp"
				        android:topLeftRadius="2dp"/>
				</shape>
			</item>
			<item
		        android:left="1px"
		        android:right="1px"
		        android:bottom="3px">
				<shape
				    android:shape="rectangle">
				    <solid android:color="@android:color/white"/>
				    <padding
						android:left="@dimen/activity_horizontal_margin"
						android:right="@dimen/activity_horizontal_margin"
						android:top="@dimen/activity_horizontal_margin"
						android:bottom="@dimen/activity_horizontal_margin"/>
				    <corners
				        android:bottomRightRadius="2dp"
				        android:bottomLeftRadius="2dp"
				        android:topRightRadius="2dp"
				        android:topLeftRadius="2dp"/>
				</shape>
			</item>
		</layer-list>
	</item>
	<item android:state_pressed="true">
	    <shape
		    android:shape="rectangle">
		    <solid android:color="@color/crimson_transparent"/>
		    <padding
				android:left="@dimen/activity_horizontal_margin"
				android:right="@dimen/activity_horizontal_margin"
				android:top="@dimen/activity_horizontal_margin"
				android:bottom="@dimen/activity_horizontal_margin"/>
		    <corners
		        android:bottomRightRadius="2dp"
		        android:bottomLeftRadius="2dp"
		        android:topRightRadius="2dp"
		        android:topLeftRadius="2dp"/>
		</shape>
	</item>
</selector>
