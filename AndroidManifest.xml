<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steelhawks.hawkscout"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name="com.steelhawks.hawkscout.Globals"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher3"
        android:label="@string/app_name"
        android:theme="@style/HawkScoutTheme" >
        <activity
            android:name="com.steelhawks.hawkscout.SignIn"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.CompetitionMenu"
            android:label="@string/title_activity_competition_menu" >
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.CompetitionActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_competition"
            android:parentActivityName="com.steelhawks.hawkscout.CompetitionMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steelhawks.hawkscout.CompetitionMenu" />
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.PitScouting"
            android:label="@string/title_activity_pit_scouting"
            android:parentActivityName="com.steelhawks.hawkscout.CompetitionActivity" >
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.TeamActivity"
            android:label="@string/title_activity_team"
            android:parentActivityName="com.steelhawks.hawkscout.CompetitionActivity$HomeFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steelhawks.hawkscout.CompetitionActivity$HomeFragment" />
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.MatchScouting"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_match_scouting"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.Competition2"
            android:label="@string/title_activity_competition_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.CompetitionMain"
            android:label="@string/title_activity_competition_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.PitScoutingMain"
            android:label="@string/title_activity_pit_scouting_main"
            android:parentActivityName="com.steelhawks.hawkscout.CompetitionMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steelhawks.hawkscout.CompetitionMain" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steelhawks.hawkscout.TeamActivityMain"
            android:label="@string/title_activity_team_activity_main"
            android:parentActivityName="com.steelhawks.hawkscout.CompetitionMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steelhawks.hawkscout.CompetitionMain" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
